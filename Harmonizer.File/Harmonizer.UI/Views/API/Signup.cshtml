@model Harmonizer.Core.Model.APIModel
@{
    ViewBag.Title = "API Key Signup";
}


<div class="form-horizontal my-3">
    <div class="container">
        <div id="divPartial">
            @Html.Action("UserHeader", "FHFile")
        </div>
        <h4>API Key Signup</h4>
        <hr />
        <div class="bg-white p-3 border w-100 float-left">
            <div class="text-center">
                <div class="form-group">
                    <div>
                        <h5><b>Signup for a single API key and use it across File Harmonizer Global API's</b></h5>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-4">
                            <h5><b>API Key</b></h5>
                            Sign up to use our API's
                        </div>
                    </div>
                    <div class="mt-4 row">
                        <div class="col-md-4">
                            <input type="button" id="btnsave" name="Get an API Key" class="btn btn-info btn-lg" style="width: 200px" value="Get an API Key" />
                        </div>
                    </div>
                    <div class="mt-4 row">
                        <div class="col-md-4">
                            Generated APIKey: <span id="apikey"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="myunvalidAPIkey">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">API Key is not Valid !</h4><button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <!-- Modal Header -->
            <div class="modal-body">
                <span id="UnvalidKey"></span>
            </div>
        </div>
    </div>
</div>
<script>
     var compare_dates = function (edate1, cdate2) {
        if (edate1 < cdate2)
            return true;
        else {
            return false;
        }
    }

    $('#btnsave').click(function () {
        debugger;
        var edate = '@ViewBag.ExpireDate';
        var cdate = '@DateTime.Today.Date.ToShortDateString()';
        $.ajax({
                type: "GET",
                url: '@Url.Action("GetAPIkey", "API")',
                dataType: "json",
                contentType: 'application/json; charset=utf-8',
            success: function (data) {
                debugger;
            if (edate != "") {
                if (compare_dates(new Date(edate), new Date(cdate)) == true) {
                    $('#myunvalidAPIkey').show();
                    $('#myunvalidAPIkey').modal('toggle');
                    $('#UnvalidKey').text(data);
                 }
               }
              $('#apikey').text(data);
            },
            error: function (error) {
                alert("API Key is not Generated");
            }
            });
        });
</script>
