
@using System.Collections
@model IEnumerable<Harmonizer.Core.Model.LanguageTimeZone>
@{
    WebGrid webGrid = new WebGrid(source: Model, canPage: false, canSort: false);
}

@if (Model.Count() > 0)
{
    <div class="row scrollable-table">
        <div class="col-md-12">
            @webGrid.GetHtml(
                  htmlAttributes: new { @id = "LanguageDetails", @class = "table table-bordered table-sm table-striped search-replace-table sticky-header" },
                  columns: webGrid.Columns(
                  webGrid.Column("Country", format: @<text>
                  <input type="hidden" id="hddenID" value="@item.ID" />
                  @Html.Label("lblCountry", (string)item.Country,new {@id= "lblCountry",@class="read" })
                   <input type="text" value="@item.Country" class="edit" id="txtCountryGrid"/>
                </text>),
                  webGrid.Column("Language", format: @<text>@Html.Label("lblLanguage", (string)item.Language, new { @id = "Language", @class = "read" })
                   <input type="text" value="@item.Language" class="edit" id="txtLanguageGrid" />
            </text>),
                  webGrid.Column("Code", format: @<text>@Html.Label("lblCode", (string)item.Code, new { @id = "lblCode", @class = "read" })
                   <input type="text" value="@item.Code" class="edit" id="txtCodeGrid" />
            </text>),
                  webGrid.Column("Name", format: @<text>@Html.Label("lblName", (string)item.LanguageDescription, new { @id = "lblName", @class = "read" })
                   <input type="text" value="@item.LanguageDescription" class="edit" id="txtNameGrid" />
            </text>),
                  webGrid.Column("Update", format: @<text><input type="button" name='btnEdit' value="Update" class="btn-info btn-edit read" />
                  <input type="button" name='btnUpdate' value="Update" class="btn-info btn-update edit" />
                  <input type="button" name='btnCancel' value="Cancel" class="btn-info btn-cancel edit" />
                 </text> ),
                  webGrid.Column("Delete", format: @<input type="button" name='btnDelete' value="Delete" class="btn-info btn-delete" />)
                 ))
        </div>
    </div>

}
else
{
    <div class="row">
        <div class="col-md-12">
            <span class="text-danger">Data not found!</span>
        </div>
    </div>
}
