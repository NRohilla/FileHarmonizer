
@model IEnumerable<Harmonizer.UI.Models.Association>
@{
    WebGrid webGrid = new WebGrid(source: Model, canPage: false, canSort: false);
}
@if (Model.Count() > 0)
{
    <div class="row scrollable-table">
        <div class="col-md-12">
            @webGrid.GetHtml(
                   htmlAttributes: new { @id = "AssociationDetails", @class = "table table-bordered table-sm table-striped search-replace-table sticky-header" },
                   columns: webGrid.Columns(
                        webGrid.Column("FHNumber", format: @<span>@Html.Label("lblFHnumber", String.Format("{0}", (string)item.FHnumber), new { @id = "lblFHnumber" })</span>),
                                            webGrid.Column("Associate", format: @<span>@Html.Label("lblAssociate", String.Format("{0}", (string)item.Associate))</span>),
                                                          webGrid.Column("AssocStatus", format: @<span>@Html.Label("lblAssocStatus", (string)item.AssocStatus)</span>),
                                                                          webGrid.Column("OriginalDateofAssoc", format: @<span>@Html.Label("lblOriginalDateofAssoc", (string)item.OriginalDateofAssoc)</span>),
                                                                        webGrid.Column("AssocCanceledDate", format: @<span>@Html.Label("lblAssocCanceledDate", (string)item.AssocCanceledDate)</span>),
                                                                 webGrid.Column("AssocCanceledBy", format: @<span>@Html.Label("lblAssocCanceledBy", (string)item.AssocCanceledBy)</span>),
                                                webGrid.Column("Edit", format: @<input type="button" name='btnEdit' value="Edit" class="btn-info btn-delete" />)

                                                                                                                     )
                                                                                                               )
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <span class="text-danger">User not maintain.</span>
        </div>
    </div>
}