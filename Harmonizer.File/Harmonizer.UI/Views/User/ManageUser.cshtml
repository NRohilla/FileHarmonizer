
@{
    ViewBag.Title = "Maintain Users";
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<div class="form-horizontal my-3">
    <div class="container">
        <div id="divPartial">
            @Html.Action("UserHeader", "FHFile")
        </div>
        <div class="blink_heading">
            <h4>Maintain User</h4>
            <input type="button" name="activate" id="btnReactivate" value="Reactivate"
                   onclick="window.location.href='@Url.Action("StartMyFreeMonth","User",new { token=(string)ViewBag.token})'" class="btn btn-info" style="float:right;" />
        </div>
        <hr />
        <div class="bg-white p-3 border w-100 float-left">
            <div class="float-right">
                <input type="button" id="btnCreateUser" class="btn btn-info" value="Create New User" />
