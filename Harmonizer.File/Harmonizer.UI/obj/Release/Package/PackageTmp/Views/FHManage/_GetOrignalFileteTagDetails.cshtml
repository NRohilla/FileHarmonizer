@model IEnumerable<Harmonizer.Core.Model.Repository>
@{
    WebGrid webGrid = new WebGrid(source: Model, canPage: false, canSort: false);
}

@if (Model.Count() > 0)
    {

        <div class="row"  id="dvData">
            <div class="col-md-12">
                @webGrid.GetHtml(
                    htmlAttributes: new { @id = "repositoryTagDetails", @class = "table table-bordered table-sm table-striped search-replace-table" },
                    columns: webGrid.Columns(
                        webGrid.Column("S.No.", format: item => item.WebGrid.Rows.IndexOf(item) + 1),
                    webGrid.Column("Tag ID", format: @<span>@Html.Label("lblTemplateExt", (string)item.UTAGID)</span>),
                 webGrid.Column("Search", format: @<span>@Html.Label("lblTemplate", (string)item.SearchWord)</span>),
             webGrid.Column("Description", format: @<span>@Html.Label("lblTemplageSector", (string)item.Description)</span>),
         webGrid.Column("Share", format: @@<span>@Html.Label("lblTemplageSector", (string)item.Share)</span>)
        ))
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <span class="text-danger">Data not found! Please create repository.</span>
            </div>
        </div>
    }

