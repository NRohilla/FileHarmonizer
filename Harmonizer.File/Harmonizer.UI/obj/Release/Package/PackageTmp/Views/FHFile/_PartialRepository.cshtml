@model IEnumerable<Harmonizer.Core.Model.Repository>
@{
    WebGrid webGrid = new WebGrid(source: Model, canPage: false, canSort: false);
}

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-md-12">
            @webGrid.GetHtml(
                                 htmlAttributes: new { @id = "Repository", @class = "Grid-table" },
                                 columns: webGrid.Columns(
                                 webGrid.Column("GlobPri", "GlobPri"),
                                 webGrid.Column("Description", "Description"),
                                 webGrid.Column("Share", format: @<span style="background-color:yellow;">@Html.TextBox("name_" +(string) item.UTAGID, (string)item.Share, new { @class = "text-box" })</span>)))
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="button" id="btnSaveRepository" value="Save Repository" class="btn btn-info text-center" />
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <span class="text-danger">Data not found! Please create repository.</span>        
        </div>
    </div>
}

<style>
    .text-box {
        height: 18px;
    }
</style>
