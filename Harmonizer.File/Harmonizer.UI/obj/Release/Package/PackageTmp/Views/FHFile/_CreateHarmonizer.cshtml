@model IEnumerable<Harmonizer.Core.Model.Repository>
@{
    WebGrid webGrid = new WebGrid(source: Model, canPage: false, canSort: false);
}

@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-md-12">
            @webGrid.GetHtml(
          htmlAttributes: new { @id = "Harmonizer", @class = "Grid-table" },
          columns: webGrid.Columns(
          webGrid.Column("GlobPri", format: @<span>@Html.TextBox("gobpname_" + (string)item.UTAGID, (string)item.GlobPri, new { @class = "txt-globpri" })</span>),
         webGrid.Column("Description", "Description"),
         webGrid.Column("Share", format: @<span style="background-color:yellow;">@Html.TextBox("name_" + (string)item.UTAGID, (string)item.Share, new { @class = "text-box" })</span>),
         webGrid.Column(format: @<input type="hidden" name='ID_"@item.UTAGID"' value="@item.ID" />),
         webGrid.Column(format: @<input type="hidden" name='UTAGID_"@item.UTAGID"' value="@item.UTAGID" />),
         webGrid.Column(format: @<input type="hidden" name='orgGlogPriValue_"@item.UTAGID"' value="@item.GlobPri" />)
        ))
        </div>
    </div>
    <div class="row mt-1">
        <div class="col-md-12">
            <input type="button" id="btnSaveRepository" value="Create Harmonizer" class="btn btn-info text-center" />
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <span class="text-danger">Data not found! Please create repository.</span>
        </div>
    </div>
}

<style>
    .text-box {
        height: 20px;
    }
    .txt-globpri {
        height: 20px;
        width:5px;
    }
</style>